@model OrderDiscountModel
<div class="DTTT btn-group">
    @if (true)
    {
        <a title="@string.Format("Xóa")" data-href="/OrderDiscount/IsDeletes"
           class="btn btn-danger hidden actMultiTicks quickDeletes" aria-controls="searchable">
            <i class="fa fa-trash no-margin" aria-hidden="true"></i> @string.Format("Xóa")
        </a>
    }
    <a title="@string.Format("Tạo mới")" data-target=".ui-dialog:visible" href="/OrderDiscount/create"
       class="btn btn-info quickUpdate" aria-controls="searchable">
        <i class="fa fa-flus" aria-hidden="true"></i> @string.Format("Tạo mới")
    </a>
    <div class="btn-group">
        <a href="javascript:;" data-toggle="dropdown" class="btn btn-sm btn-info dropdown-toggle" aria-expanded="false"><i class="fa fa-cloud-download"></i>@string.Format("Export")  <i class="fa fa-angle-down"></i></a>
        <ul class="dropdown-menu dropdown-blue dropdown-menu-right">
            <li class="">
                <a target="_blank" class="btn-xs btn-info" title="Mẫu" href="@(Utils.GenLinkExport(string.Format("/export/OrderDiscountExportPDF?"),Model.SearchParam))">
                    <i class="glyphicon glyphicon-download"></i>  @string.Format("PDF")
                </a>
            </li>
        </ul>
    </div>
</div>
<div>
    <table class="table table-bordered table-hover table-striped dataTable">
        <thead>
            <tr>
                <th value="" class="wpx50 center">@string.Format("STT")</th>
                <th class="wpx50 center">
                    <label>
                        <input class="group-checkable" type="checkbox">
                        <span class="text"></span>
                    </label>
                </th>
                <th class="center wpx250">@string.Format("Thông tin đơn chiết khấu")</th>
                <th class="center">@string.Format("Chi tiết đơn hàng")</th>
                <th class="center wpx100">@string.Format("Chiết khấu(%)")</th>
                <th class="center wpx120">@string.Format("Hỗ trợ Event(VNĐ)")</th>
                <th class="center wpx120">@string.Format("Tổng tiền(VNĐ)")</th>
                <th class="center wpx120">@string.Format("Thao tác")</th>
            </tr>
        </thead>
        <tbody>
            @if (!Equals(Model.OrderDiscounts, null))
            {
                var stt = ViewBag.Paging.PageStart;
                foreach (var item in Model.OrderDiscounts)
                {
                    stt++;
                    var customer = Model.Customers.FirstOrDefault(t => t.ID == item.IDCustomer) ?? new Customer();
                    var idOrders = item.IDOrders.ToIntSplit(',');
                    var orders = Model.Orders.Where(t => idOrders.Contains(t.ID)).ToList();
                    var updateLink = string.Format("/OrderDiscount/update/{0}", item.ID);
                    var deleteLink = "/OrderDiscount/IsDelete";
                    var time = item.Quater != (int)(Enums.Quater.All)
                             ? string.Format("{0} - {1}", Utils.GetDescription<Enums.Quater>(item.Quater), item.Year)
                             : string.Format("Năm {0}", item.Year);
                    <tr>
                        <td class="center">@stt</td>
                        <td class="center">
                            <label>
                                <input data-id="@item.ID" class="checkboxes" type="checkbox">
                                <span class="text"></span>
                            </label>
                        </td>
                        <td>
                            <p>
                                <span>@string.Format("Mã CK: ")</span>
                                <span class="font-weight-bold">@item.Code</span>
                            </p>
                            <p>
                                <span>@string.Format("Khách hàng: ")</span>
                                <a href="@string.Format("/customer?Term={0}",customer.Name)">@customer.Name</a>
                            </p>
                            <p>
                                <span>@string.Format("Thời điểm:")</span>
                                <span class="font-weight-bold">@time</span>
                            </p>
                            <p>
                                <span>@string.Format("Loại đơn:")</span>
                                @CUtils.RenderOrderType(item.Type,"null")
                            </p>
                        </td>
                        <td>
                            @if (!Equals(orders, null))
                            {
                                var sumOrderDetails = orders.Sum(t => t.RealValue);
                                <table class="table table-bordered">
                                    <tbody>
                                        @foreach (var order in orders)
                                        {
                                            <tr>
                                                <td>@order.PONo</td>
                                                <td>@(order.RealValue > 0 ? string.Format("{0:0,0}", order.RealValue) : "0")</td>
                                            </tr>
                                        }
                                        <tr class="red font-weight-bold">
                                            <td>
                                                @string.Format("Tổng")
                                            </td>
                                            <td>@(sumOrderDetails > 0 ? string.Format("{0:0,0}", sumOrderDetails) : "0")</td>
                                        </tr>

                                    </tbody>
                                </table>

                            }
                        </td>
                        <td class="center">
                            @item.Percent
                        </td>
                        <td class="center">
                            @(item.Event > 0 ? string.Format("{0:0,0}", item.Event) : "0")
                        </td>
                        <td class="center ">
                            <span class="font-weight-bold success">
                                @(item.RealTotal > 0 ? string.Format("{0:0,0}", item.RealTotal) : "0")
                            </span>
                        </td>
                        <td class="text-center">
                            <div class="btns">
                                <div class="btn-group">
                                    <ul class="important_action_btn">
                                        <li>
                                            <a class="quickUpdate" data-target=".ui-dialog:visible" data-id="@item.ID" href="@updateLink"><i aria-hidden="true" title="@string.Format("Cập nhật")" class="fa fa-pencil btn-primary"></i> <span>@string.Format("Cập nhật")</span></a>
                                        </li>
                                        <li>
                                            <a class="quickDelete" data-target=".ui-dialog:visible" data-id="@item.ID" href="@deleteLink"><i aria-hidden="true" title="@string.Format("Xóa")" cla class="fa fa-trash-o btn-danger"></i> <span>@string.Format("Xóa")</span></a>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="row DTTTFooter">

        @if (Model.OrderDiscounts.Count <= 0)
        {
            <div class="dataTables_info col-sm-12 text-center padt10">
                <strong class="gray">
                    @string.Format("Không có sản phẩm nào phù hợp, vui lòng thử lại")
                </strong>
            </div>
        }
        else
        {
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="dataTables_info text-center" id="searchable_info" role="status" aria-live="polite">
                    <div>
                        <strong class="gray">
                            @string.Format("Có tổng số {0} đơn chiết khấu", ViewBag.Paging.Total)
                        </strong>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                @ViewBag.Paging.Render("#div-OrderDiscounts")
            </div>
        }
    </div>
</div>