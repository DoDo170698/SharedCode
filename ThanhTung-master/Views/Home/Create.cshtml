@{ 
    Layout = null;
}
<form id="FrmCrPO" data-bv-feedbackicons-validating="glyphicon glyphicon-refresh" data-bv-feedbackicons-invalid="glyphicon glyphicon-remove" data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
      title="@string.Format("Đây là Title")" action="#" class="form-horizontal bv-form validateForm quickSubmit" method="post" novalidate="novalidate">
    <div class="container-fluid">
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@string.Format("Mã hóa đơn")<span class="red">*</span></label>
            <div class="col-lg-8">
               <input type="text" class="form-control" placeholder="@string.Format("Mã hóa đơn")"/>
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-lg-4 control-label">@string.Format("Tên hóa đơn")<span class="red">*</span></label>
            <div class="col-lg-8">
                <input type="text" class="form-control" placeholder="@string.Format("Tên hóa đơn")"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
                <p id="messeage_err" class="red"></p>
                <input type="hidden" value="1" name="ID" />
                <button type="submit" class="btn btn-info btn-sm">@string.Format("Xong")</button>
            </div>
        </div>
    </div>
</form>

