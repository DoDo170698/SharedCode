@model AdminModel
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="#">@string.Format("Tổng quan")</a>
        </li>
        <li>
            <a href="/CategoryType">@string.Format("Loại danh mục")</a>
        </li>
        @if (!Equals(Model.Ancestors, null) && Model.Ancestors.Count > 0)
        {
            <li>
                <a href="/category?Type=@Model.CategoryType.ID">@Model.CategoryType.Name</a>

            </li>

            var ancestors = Model.Ancestors.Where(t => t.ID != Model.Parent.ID).ToList();
            foreach (var item in ancestors)
            {
                <li class="">
                    <a href="@string.Format("/Category/Index?ID={0}Type={1}", item.ID, item.IDCategoryType)">@item.Name</a>
                </li>
            }
            <li class="active">@Model.Parent.Name</li>
        }
        else
        {
            Model.Parent.Name = Model.CategoryType.Name;
            <li class="active">@Model.Parent.Name</li>
        }

    </ul>
</div>

<div class="page-body">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-yellow">
                    <span class="widget-caption"><i class="menu-icon fa fa fa-list-alt"></i>Quản lý loại danh mục</span>
                    <div class="widget-buttons">
                        <a class="widget_back_btn text-btn" href="#" title="Quay lại"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> <span>Quay lại</span></a>
                        <a data-toggle="maximize" href="#"><i class="fa fa-expand"></i></a>
                        <a data-toggle="collapse" href="#"><i class="fa fa-minus"></i></a>
                        <a data-toggle="dispose" href="#"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="widget-body no-padding">
                    <div class="dataTables_wrapper form-inline">
                        <div class="dataTables_filter">
                            <form class="quickSearch dataFilter" data-target="#div-Categories" action="/Category/Index/@Model.Category.Parent?Type=@Model.Category.IDCategoryType" method="post" enctype="multipart/form-data">
                                <div class="col-md-2">
                                    <label>
                                        <input type="text" name="Term" class="form-control" value="@Model.SearchParam.Term" placeholder="Tìm kiếm theo tên" />
                                    </label>
                                </div>
                                <div class="col-md-2 dataFilter_Dropdown_Section">
                                    <div class="dropdown dataFilter_Dropdown">
                                        <button class="btn btn-default dropdown-toggle hidden" type="button" id="dataFilter_Dropdown">
                                            <i class="fa fa-sliders" aria-hidden="true"></i> Lọc
                                        </button>
                                    </div>
                                    <button class="btn btn-info" type="submit"><i class="glyphicon glyphicon-search"></i><span class="hidden-search">@string.Format("Tìm kiếm")</span> </button>
                                    <a title="@string.Format("Hủy tìm kiếm")" class="btn btn-info " href="#"><i class="fa fa-times" aria-hidden="true"></i><span class="hidden-search">@string.Format("Hủy")</span></a>
                                </div>
                                <div class="dropdown-menu dataFilter_Dropdown_target">
                                    <div class="dropdown-menu-content">
                                        <a href="#" title="Đóng" class="dataFilter_Dropdown_close"><i class="ion-android-close"></i></a>
                                        <div class="col-xs-12">
                                            <div class="row">
                                                <div class="col-md-2 ">
                                                    <label>
                                                        <select>
                                                            <option>Chưa xác định</option>
                                                        </select>
                                                    </label>
                                                </div>
                                                <div class="col-md-2 ">
                                                    <label>
                                                        <select>
                                                            <option>Chưa xác định</option>
                                                        </select>
                                                    </label>
                                                </div>
                                                <div class="col-md-2 ">
                                                    <label>
                                                        <select>
                                                            <option>Chưa xác định</option>
                                                        </select>
                                                    </label>
                                                </div>
                                                <div class="col-md-2 ">
                                                    <label>
                                                    </label>
                                                </div>
                                                <div class="col-md-2">
                                                    <label>

                                                    </label>
                                                </div>
                                                <div class="col-md-2 ">
                                                    <label>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="DTTT btn-group">
                            @if (true)
                            {
                                <a title="@string.Format("Xóa")" data-href="/Category/IsDeletes"
                                   class="btn btn-danger hidden actMultiTicks quickDeletes" aria-controls="searchable">
                                    <i class="fa fa-trash no-margin" aria-hidden="true"></i> @string.Format("Xóa")
                                </a>
                            }
                            <a title="@string.Format("Tạo mới")" data-target=".ui-dialog:visible" href="@string.Format("/Category/create?Type={0}&Parent={1}",Model.Category.IDCategoryType, Model.Category.Parent)"
                               class="btn btn-info quickUpdate" aria-controls="searchable">
                                <i class="fa fa-flus" aria-hidden="true"></i> @string.Format("Tạo mới")
                            </a>
                        </div>
                        <div class="divContainer">
                            <div id="div-Categories" value="@Model.Parent.Name" class="divContainer">
                                @Html.Partial("Categories", Model)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>